extends models/default
block content
  include templates/header
  include templates/navbar
  .support--page
    button.btn.btn--support(data-mfp-src="#suppurt") Связаться с поддержкой
    #suppurt.popup--default.xs.mfp-hide
          .popup__header Свяжитесь<br>с поддержкой
          form.popup__body(data-validate)
            .input--row
              label Имя
              input(type="text" name="suppurt-name" required)
            .input--row
              label Телефон
              input(type="tel" name="restore-tel" required)
            .input--row
              label Сообщение
              textarea(cols="30", rows="10", required, name="restore-message")
            .input--row
              .captcha--block
                .g-recaptcha(data-sitekey="6LcePAATAAAAAGPRWgx90814DTjgt5sXnNbV5WaW")
                script(src='https://www.google.com/recaptcha/api.js')
            button.btn.btn-default Отправить
    .container
      h1 Поддержка
      .row
        .col.md-6: a.support--page__link(href="") 
          svg: use(xlink:href="#text")
          span Техническая документация
        .col.md-6: a.support--page__link(href="") 
          svg: use(xlink:href="#floppy")
          span Программное обеспечение
        .col.md-6: a.support--page__link(href="") 
          svg: use(xlink:href="#folder")
          span Каталоги
        .col.md-6: a.support--page__link(href="") 
          svg: use(xlink:href="#video")
          span Видео уроки
        .col.md-6: a.support--page__link(href="") 
          svg: use(xlink:href="#file")
          span Рекламные материалы
        .col.md-6: a.support--page__link(href="") 
          svg: use(xlink:href="#certificate")
          span Сертификаты


  include templates/footer
