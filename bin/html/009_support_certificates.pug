extends models/default
block content
  include templates/header
  include templates/navbar
  .support--page
    button.btn.btn--support(data-mfp-src="#suppurt") Связаться с поддержкой
    #suppurt.popup--default.xs.mfp-hide
          .popup__header Свяжитесь<br>с поддержкой
          form.popup__body(data-validate)
            .input--row
              label Имя
              input(type="text" name="suppurt-name" required)
            .input--row
              label Телефон
              input(type="tel" name="restore-tel" required)
            .input--row
              label Сообщение
              textarea(cols="30", rows="10", required, name="restore-message")
            .input--row
              .captcha--block
                .g-recaptcha(data-sitekey="6LcePAATAAAAAGPRWgx90814DTjgt5sXnNbV5WaW")
                script(src='https://www.google.com/recaptcha/api.js')
            button.btn.btn-default Отправить
    .container
      h1 Сертификаты
      .panel-group#accordion
        .panel
          .panel-title(data-toggle="collapse" data-parent="#accordion" data-target="#collapse-1" aria-expanded="true") Видеонаблюдение
          #collapse-1.panel-collapse.collapse.in
            .panel-body
              .row(data-gallery="1")
                - for (i=1; i<=6; i++)
                  .col.md-2.sm-4.xs-6
                    a(href="img/srt"+i+".jpg").support--page__str
                      img(src="img/srt"+i+".jpg", alt="")
                      span Название сертификата
        .panel
          .panel-title(data-toggle="collapse" data-parent="#accordion" data-target="#collapse-2") Охранно-пожарные системы безопасности
          #collapse-2.panel-collapse.collapse
            .panel-body
              .row(data-gallery="2")
                - for (i=1; i<=6; i++)
                  .col.md-2.sm-4.xs-6
                    a(href="img/srt"+i+".jpg").support--page__str
                      img(src="img/srt"+i+".jpg", alt="")
                      span Название сертификата
        .panel
          .panel-title(data-toggle="collapse" data-parent="#accordion" data-target="#collapse-3") Сертификаты предприятия
          #collapse-3.panel-collapse.collapse
            .panel-body
              .row(data-gallery="3")
                - for (i=1; i<=6; i++)
                  .col.md-2.sm-4.xs-6
                    a(href="img/srt"+i+".jpg").support--page__str
                      img(src="img/srt"+i+".jpg", alt="")
                      span Название сертификата



  include templates/footer
