header.header.assigned
  .container
    .header--wraper
      .header--left
        a(href="001_index.html").header__brand: img(src="img/logo__header.png", alt="")
      .header--right
        span.header--phone
          small (+373 22) 
          span 911-111
        .btn.back-call
          svg: use(xlink:href="#phone")
          span Заказать звонок
        .dropdown.mod--lang
          a( data-toggle="dropdown" )
            img(src="img/ru.gif", alt="")
            span ru
          ul.dropdown--menu
            li: a(href="#").active 
              img(src="img/ru.gif", alt="")
              span ru
            li: a(href="#") 
              img(src="img/en.gif", alt="")
              span en
            li: a(href="#") 
              img(src="img/ro.gif", alt="")
              span md
        .mod--profile
          a.user(href="")
            svg: use(xlink:href="#user-circle")
            span Константин Константинопольский
          .stats
            span.balance Баланс: 
              strong -200 MDL
            span.xcoin
              svg: use(xlink:href="#xcoin")
              span 145
  .basket
    button.basket--icon(data-toggle="basket")
      svg: use(xlink:href="#basket")
      span 23
    .basket--wraper
      button.basket--line(data-toggle="basket"): svg: use(xlink:href="#basket")
      h3 Покупки
      .basket--list
        - for (i=1; i<=23; i++)
          .basket--item
            a.basket--item__image: img(src="img/product1.jpg", alt="")
            .basket--item__info
              a.item__delete: svg: use(xlink:href="#danger")
              a.item__title DH-IPC-HDBW2421R-ZSVFS
              .number
                input(type='text', value='1', min='1')
                .btn-plus: svg: use(xlink:href="#plus")
                .btn-minus: svg: use(xlink:href="#minus")
              span.item__price Цена: 1500 MDL
      .basket--controls
        .total
          span Всего:
          .info
            span 23 товаров
            span 1080 леев
        a.btn.btn-default Оформить


