extends models/default
block content
  include templates/header
  include templates/navbar
  .contacts--page
    .container
      h1 Контакты
      .contacts--map
        .contacts--map__info
          .row
            .col.md-6
              h4.contacts__title
                svg: use(xlink:href="#contact_adress")
                span Exterior SRL
              p.contacts__adress MD-2012, г. Кишинев, ул. Митрополит Варлаам 65
              p.contacts__fax Факс: (022) 911-149
            .col.md-6
              p.contacts__time
                svg: use(xlink:href="#contact_time")
                strong График работы:
                span Пн-Пт: 9:00–17:30<i></i>Сб: 9:00–14:00
              p.contacts__phone
                svg: use(xlink:href="#contact_phone")
                span <small>(022)</small> 911-111
        img(src="img/map.jpg", alt="")
      .contacts--branch
        .row
          .col.sm-6.md-3
            h4 Секретариат
            p
              span Тел: (022) 911-115 
              span E-mail: docs@exterior.md

          .col.sm-6.md-3
            h4 Сервис и гарантия
            p: span Тел: (022) 911-100 

          .col.sm-6.md-3
            h4 Отдел продаж
            p
              span Тел: (022) 911-116 
              span Тел: (022) 911-120 
              span Тел: (022) 911-121 
              span Тел: (022) 911-124

          .col.sm-6.md-3
            h4 Инженер по охранным системам
            p: span Тел: (022) 911-125

          .col.sm-6.md-3
            h4 Проектирование и монтаж
            p: span Тел: (022) 911-119 

          .col.sm-6.md-3
            h4 Бухгалтерия
            p: span Тел: (022) 911-105 

          .col.sm-6.md-3
            h4 IT Отдел (настройка видео и СКУД)
            p
              span Тел: (022) 911-123 
              span Консультация: +373 691 97 022 

          .col.sm-6.md-3
            h4 Горячая линия IT
            p: span Тел: +373 691 19  111
    section.contact--form
      .container
        .row
          .col.lg-10.offset-lg-1
            form.validate--form
              h2 Свяжитесь с нами
              .row
                .col.md-6
                  .input--row
                    label E-mail <i>*</i>
                    input(type="email" required name="email")
                  .input--row
                    label Телефон <i>*</i>
                    input(type="tel" required name="phone")
                  .input--row
                    label Имя <i>*</i>
                    input(type="text" required name="name")
                  .input--row
                    label Компания <i>*</i>
                    input(type="text" required name="company")
                .col.md-6
                  .input--row
                    label Отдел  <i>*</i>
                    select(data-select)
                      option(data-display=" ") Ничего не выбрано
                      option Отдел 1
                      option Отдел 2
                      option Отдел 3
                      option Отдел 4
                      option Отдел 5
                  .input--row
                    label Сообщение
                    textarea(cols="30", rows="10", required, name="message")
              button.btn.btn-default(type="submit") Отправить



  include templates/footer
