extends models/default
block content
  include templates/header
  include templates/navbar
  .compare--page
    .container
      h1 Сравнение товаров
      .compare
        .row
          .col.md-3.sm-4: .compare--sidebar
            .checkbox
              input(type="checkbox")#lg_compare
              label(for="lg_compare")
                span.check: svg: use(xlink:href="#success")
                span Выделить различия
            ul.spec
              li.active Экран (диагональ)
              li Тип дисплея
              li Видеопоток
              li Количество видеоканалов
              li Количество аудиоканалов
              li Управление замком
              li.active Регулировка громкости
              li.active Способ установки
              li Функция квадратора
              li Функция PIP
              li Встроенный блок памяти
              li Сенсорный экран
          .col.md-9.sm-8: .compare--wraper
            .owl-carousel.compare--slider
              - for (i=1; i<=5; i++)
                .slide
                  a.slide--delete
                  .product
                    a(href="").product--image: img(src="img/product1.jpg", alt="")
                    a(href="").product--title DH-IPC-HDBW2421R-ZSVFS
                    p.product--info 1/3” Прогрессивная CMOS 4Megapixel
                    p 
                      span.old--price 1500 леев
                      span.new--price 1499 леев
                    button.btn.add-to-basket
                      span.inactive В корзину
                      span.active
                        svg: use(xlink:href="#success")
                        span добавлено
                  .product--spec: dl
                    dt Экран (диагональ)
                    dd.active 7”
                    dt Тип дисплея
                    dd TFT LCD
                    dt Видеопоток
                    dd PAL/NTSC
                    dt Количество видеоканалов
                    dd 4
                    dt Количество аудиоканалов
                    dd 2
                    dt Управление замком
                    dd: svg.success: use(xlink:href="#success")
                    dt Регулировка громкости
                    dd.active: svg.success: use(xlink:href="#success")
                    dt Способ установки
                    dd.active накладной
                    dt Функция квадратора
                    dd: svg.danger: use(xlink:href="#danger")
                    dt Функция PIP
                    dd: svg.danger: use(xlink:href="#danger")
                    dt Встроенный блок памяти
                    dd: svg.danger: use(xlink:href="#danger")
                    dt Сенсорный экран
                    dd: svg.danger: use(xlink:href="#danger")
                .slide
                  a.slide--delete
                  .product
                    a(href="").product--image: img(src="img/product1.jpg", alt="")
                    a(href="").product--title DH-IPC-HDBW2421R-ZSVFS
                    p.product--info 1/3” Прогрессивная CMOS 4Megapixel
                    p: span.price 1499 леев
                    button.btn.add-to-basket
                      span.inactive В корзину
                      span.active
                        svg: use(xlink:href="#success")
                        span добавлено
                  .product--spec: dl
                    dt Экран (диагональ)
                    dd.active 7”
                    dt Тип дисплея
                    dd TFT LCD
                    dt Видеопоток
                    dd PAL/NTSC
                    dt Количество видеоканалов
                    dd 4
                    dt Количество аудиоканалов
                    dd 2
                    dt Управление замком
                    dd: svg.success: use(xlink:href="#success")
                    dt Регулировка громкости
                    dd.active: svg.success: use(xlink:href="#success")
                    dt Способ установки
                    dd.active накладной
                    dt Функция квадратора
                    dd: svg.danger: use(xlink:href="#danger")
                    dt Функция PIP
                    dd: svg.danger: use(xlink:href="#danger")
                    dt Встроенный блок памяти
                    dd: svg.danger: use(xlink:href="#danger")
                    dt Сенсорный экран
                    dd: svg.danger: use(xlink:href="#danger")




  include templates/footer
