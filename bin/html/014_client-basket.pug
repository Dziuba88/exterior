extends models/default
block content
  include templates/header
  include templates/navbar
  .basket--page
    .container
      h1 Корзина
      table.basket--table
        thead
          tr
            th(colspan="2") Название
            th Розничная цена
            th Цена дилера
            th Кол-во
            th Стоимость USD
            th Стоимость MDL
        tbody
          - for (i=1; i<=3; i++)
            tr
              td: a(href="").purchased--item: img(src="img/product1.jpg", alt="")
              td DH-IPC-HDBW2421R-ZSVFS
              td(data-header="Розничная цена") 26 USD
              td(data-header="Цена дилера") 26 USD
              td(data-header="Кол-во")
                .number
                  input(type='text', value='1', min='1')
                  .btn-plus: svg: use(xlink:href="#plus")
                  .btn-minus: svg: use(xlink:href="#minus")
              td(data-header="Стоимость USD") 26 USD
              td(data-header="Стоимость MDL") 1500 MDL
        tfoot
          tr
            th(colspan="4").hide--tablet
            th(colspan="3")
              strong Сумма:
              span 25 USD/1500 MDL
      .row
        .col.md-7.basket--form
          h2
            svg: use(xlink:href="#truck")
            span Способ доставки
          .row
            .col.md-5
              input(id="radio1" type="radio" name="delivery")
              label(for='radio1')
                i: svg: use(xlink:href="#success")
                span Самовывоз
              input(id="radio2" type="radio" checked name="delivery")
              label(for='radio2')
                i: svg: use(xlink:href="#success")
                span Бесплатная (1 день)
              input(id="radio3" type="radio" name="delivery")
              label(for='radio3')
                i: svg: use(xlink:href="#success")
                span Срочная за час (+50 леев)
              input(id="radio4" type="radio" name="delivery")
              label(for='radio4')
                i: svg: use(xlink:href="#success")
                span По регионам
            .col.md-7
              label Регион
              select(data-select)
                option(data-display="Выбрать Регион") Ничего не выбрано
                option(selected) Кишинев
                option Кишинев
                option Кишинев
                option Кишинев
                option Кишинев
              label Адрес
              input(type="text")
        .col.md-4.offset-md-1.basket--summary: .btn.btn-outline.block Продолжить покупки
    .client--info
      .container
        h2 Оформить заказ
        .row.bottom
          .col.sm-6.md-3
            label Имя 
            input(type="text")
          .col.sm-6.md-3
            label Телефон * 
            input(type="tel")
          .col.sm-6.md-3
            label E-mail  
            input(type="email")
          .col.sm-6.md-3: button.btn.btn--submit Заказать



  include templates/footer
